#add-entry-form.pure-form
  = form_for Entry.new do |f|
    %legend New horror snippet
    %fieldset
      = f.text_field :title, class: 'pure-input-1-3', placeholder: 'Title'
      = f.text_field :image, class: 'pure-input-1-3', placeholder: 'Image URL'
    %fieldset
      = f.text_area :description, class: 'pure-input-2-3', placeholder: 'Description'
    %fieldset
      = f.submit 'Submit horror', class: 'pure-input-2-3 pure-button'
